{
  "name": "bills-recorder",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist-electron/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "electron:serve": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "top.l0v3ch4n.bills",
    "productName": "Bill Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/.vite/**",
      "!**/node_modules/**"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-electron": "^0.29.0",
    "vue-tsc": "^3.1.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}